{
  "name": "testing-playground",
  "version": "0.1.0",
  "description": "Studies and testings.",
  "main": "src/pages/index.tsx",
  "repository": "https://github.com/jsi1v4/testing-playground.git",
  "author": "Jsi1v4 <me@jsi1v4.dev>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "test": "jest -u --coverage"
  },
  "dependencies": {
    "next": "11.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/react": "17.0.11",
    "babel-jest": "^27.0.5",
    "eslint": "7.29.0",
    "eslint-config-next": "11.0.0",
    "jest": "^27.0.5",
    "typescript": "4.3.4"
  },
  "babel": {
    "presets": [
      "next/babel"
    ]
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|.next)[/\\\\]"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(ts|tsx)$"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "babel-jest"
    }
  }
}
